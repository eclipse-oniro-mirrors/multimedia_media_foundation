import("//build/test.gni")
import("//foundation/multimedia/media_foundation/config.gni")

module_output_path = "media_foundation/unittest"

group("avbuffer_queue_unit_test") {
  testonly = true
  deps = [ ":avbuffer_queue_inner_unit_test" ]
}

#################################################################################################################osal
avbuffer_queue_unittest_cflags = [
  "-std=c++17",
  "-fno-rtti",
  "-fexceptions",
  "-Wall",
  "-fno-common",
  "-fstack-protector-strong",
  "-Wshadow",
  "-FPIC",
  "-FS",
  "-O2",
  "-D_FORTIFY_SOURCE=2",
  "-fvisibility=hidden",
  "-Wformat=2",
  "-Wdate-time",
  "-Wextra",
  "-Wimplicit-fallthrough",
  "-Wsign-compare",
  "-Dprivate=public",
  "-Dprotected=public",
]

ohos_unittest("avbuffer_queue_inner_unit_test") {
  module_out_path = module_output_path

  sanitize = {
    cfi = true
    cfi_cross_dso = true
    debug = false
  }

  include_dirs = [
    "./",
    "../../../src/buffer/avbuffer_queue/include/",
    "../../../interface/innerapi/",
  ]

  sources = [ "./avbuffer_queue_func_unit_test.cpp" ]

  cflags = avbuffer_queue_unittest_cflags

  deps = [
    "$histreamer_root_dir/src:media_foundation",
    "../common:media_foundation_inner_unit_test",
  ]

  external_deps = [
    "c_utils:utils",
    "graphic_surface:surface",
    "graphic_surface:sync_fence",
    "hilog:libhilog",
    "ipc:ipc_core",
    "memory_utils:libdmabufheap",
  ]
}
