import("//build/test.gni")
import("//foundation/multimedia/media_foundation/config.gni")

module_output_path = "media_foundation/media_foundation/unittest"

#################################################################################################################osal
filter_unittest_cflags = [
  "-std=c++17",
  "-fno-rtti",
  "-fexceptions",
  "-Wall",
  "-fno-common",
  "-fstack-protector-strong",
  "-Wshadow",
  "-FPIC",
  "-FS",
  "-O2",
  "-D_FORTIFY_SOURCE=2",
  "-fvisibility=hidden",
  "-Wformat=2",
  "-Wdate-time",
  "-Wextra",
  "-Wimplicit-fallthrough",
  "-Wsign-compare",
  "-Dprivate=public",
  "-Dprotected=public",
]

ohos_unittest("filter_unittest") {
  module_out_path = module_output_path

  sanitize = {
    cfi = true
    cfi_cross_dso = true
    debug = false
  }

  include_dirs = [
    "./",
    "./mock",
    "../../../src/buffer/avbuffer_queue/include/",
    "../../../interface/innerapi/",
    "../../../interface/inner_api/buffer/",
    "../../../interface/inner_api/common/",
    "../../../interface/inner_api/filter/",
    "../../../interface/inner_api/meta/",
  ]

  sources = [ 
    "./filter_unittest.cpp",
    #"../../../src/filter/filter.cpp",
  ]

  cflags = filter_unittest_cflags

  deps = [
    "$histreamer_root_dir/src:media_foundation",
  ]

  external_deps = [
    "c_utils:utils",
    "eventhandler:libeventhandler",
    "ffmpeg:libohosffmpeg",
    "googletest:gmock",
    "graphic_surface:surface_static",
    "graphic_surface:sync_fence_static",
    "hilog:libhilog",
    "hisysevent:libhisysevent",
    "hitrace:libhitracechain",
    "hitrace:hitrace_meter",
    "init:libbegetutil",
    "ipc:ipc_single",
    "media_foundation:media_foundation",
    "media_foundation:native_media_core",
    "safwk:system_ability_fwk",
  ]
}
